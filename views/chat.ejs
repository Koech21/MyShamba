<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Chat | PLOTTOSHA</title>
  <link rel="stylesheet" href="/css/chat.css">
</head>
<body>
  <%- include('partials/navbar') %>

  <section class="chat-container">
    <div class="chat-box">
      <% messages.forEach(msg => { %>
        <div class="chat-message <%= msg.sender_id === senderId ? 'sent' : 'received' %>">
          <p><%- msg.message %></p>
          <small><small><%= new Date(msg.sent_at).toLocaleString() %></small>
        </small>
        </div>
      <% }) %>
    </div>

    <form action="/messages/send" method="POST" class="chat-form">
      <input type="hidden" name="receiver_id" value="<%= receiverId %>">
      <input type="hidden" name="listing_id" value="<%= listingId %>">
      <input type="text" name="message" placeholder="Type your message..." required>
      <button type="submit">Send</button>
    </form>
    <% if (user && (user.role === 'admin' || user.role === 'seller')) { %>
      <form action="/send-payment-link" method="POST" class="payment-link-form">
        <input type="hidden" name="receiver_id" value="<%= receiverId %>">
        <input type="hidden" name="listing_id" value="<%= listingId %>">
        <button type="submit" class="send-payment-btn">ðŸ’° Send Payment Link</button>
      </form>
    <% } %>
  </section>

  <footer>
    <p>Â© <%= new Date().getFullYear() %> PLOTTOSHA</p>
  </footer>
</body>
<script src="/js/main.js"></script>
</html>
