<body>
  <%- include('partials/navbar') %>

  <section class="payment-container">
    <h1>Pay for <%= land.title %></h1>
    <p><strong>Location:</strong> <%= land.location %></p>
    <p><strong>Price:</strong> Ksh <%= land.price.toLocaleString() %></p>

